#!/bin/bash

clear

while x=1; do
    _signal=$(/System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport -I | grep CtlRSSI)
    _s=$(echo $_signal | awk '{print $2}')
    echo "Wifi Signal Strength: $_s"

    if [[ $1 != "-c" ]]
    then
        exit 0;
    fi

    sleep 0.5
    clear
done
